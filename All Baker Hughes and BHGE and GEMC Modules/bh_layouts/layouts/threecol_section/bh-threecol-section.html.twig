{#
/**
 * @file
 * Default theme implementation for a three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <hr class="bh-layouts__border bh-layouts__border--above"/>
    <div class="bh-layouts__container">
      {% if content['#settings'].section_title is not empty %}
        <div class="bh-layouts__header">
          {% if content['#settings'].section_title is not empty %}
            <h2 class="bh-layouts__title">{{ content['#settings'].section_title }}</h2>
          {% endif %}
        </div>
      {% endif %}
      <div class="bh-layouts__grid">
        {% if content.first %}
          <div {{ region_attributes.first.addClass('bh-layouts__region', 'bh-layouts__region--first') }}>
            {{ content.first }}
          </div>
        {% endif %}

        {% if content.second %}
          <div {{ region_attributes.second.addClass('bh-layouts__region', 'bh-layouts__region--second') }}>
            {{ content.second }}
          </div>
        {% endif %}

        {% if content.third %}
          <div {{ region_attributes.third.addClass('bh-layouts__region', 'bh-layouts__region--third') }}>
            {{ content.third }}
          </div>
        {% endif %}
      </div>
    </div>
     <hr class="bh-layouts__border bh-layouts__border--below"/>
  </div>
{% endif %}
